@{
}
<h1>Coding Events</h1>
<p>
    <a asp-controller="Events" asp-action="Add">Add Event</a>
</p>
<p>
    <a asp-controller="Events" asp-action="Delete">Delete Event</a>
</p>

@if (ViewBag.events.Count == 0)
{
    <p>No events yet!</p>
}

<table>
    <tr>
        <th>
            ID
        </th>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
    </tr>
    @foreach (var evt in ViewBag.events)
    {
        <tr>
            <td>@evt.Id</td>
            <td>@evt</td>
            <td>@evt.Description</td>
        </tr>
    }
</table>